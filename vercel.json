{
  "redirects": [
    { "source": "http://dgt.energy/:path*", "destination": "https://dgt.energy/:path*", "permanent": true },
    { "source": "http://www.dgt.energy/:path*", "destination": "https://dgt.energy/:path*", "permanent": true },
    { "source": "https://www.dgt.energy/:path*", "destination": "https://dgt.energy/:path*", "permanent": true }
  ],
  "rewrites": [
    { "source": "/", "destination": "/home" },

    { "source": "/_next/:path*", "destination": "/_next/:path*" },
    { "source": "/static/:path*", "destination": "/static/:path*" },
    { "source": "/assets/:path*", "destination": "/assets/:path*" },
    { "source": "/api/:path*", "destination": "/api/:path*" },

    { "source": "/home/:path*", "destination": "/home/:path*" },
    { "source": "/connect/:path*", "destination": "/connect/:path*" },
    { "source": "/rounds/:path*", "destination": "/rounds/:path*" },
    { "source": "/desk/:path*", "destination": "/desk/:path*" },
    { "source": "/data/:path*", "destination": "/data/:path*" },
    { "source": "/governance/:path*", "destination": "/governance/:path*" },

    { "source": "/(.*)", "destination": "https://dgt-energy.webmaster/:match*" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ]
}
